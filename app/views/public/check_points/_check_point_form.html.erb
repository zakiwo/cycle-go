<div class="col-md-6 offset-md-3 text-center">
  <%= form_with model: check_point, url: url, local:true do |f| %>
    <div class="form mb-4">
      <%= f.label :name, "チェックポイント名" %><br/>
      <%= f.text_field :name, class:"check_point_name",size:40 %>
    </div>
    <div class="form mb-4">
      <%= f.label :introduction, "説明" %><br/>
      <%= f.text_area :introduction, class:"road-intro", size: "39x3" %>
    </div>
    <div class="form mb-4">
      <%= f.label :image, "画像の登録" %><br/>
      <%= f.file_field :image %>
    </div>
    <div class="form mb-4">
      <%= f.label :latitude, "地点の緯度" %><br/>
      <%= f.text_field :latitude,class:"latitude" ,size:40 %>
    </div>
    <div class="form mb-4">
      <%= f.label :longitude, "地点の経度" %><br/>
      <%= f.text_field :longitude,class:"longitude" ,size:40 %>
    </div>
    <div class="form mb-4">
      <%= f.label :caterogy, "ポイントの種類" %><br/>
      <%= f.radio_button :category, "cautionary" %>
      <%= f.label :category, CheckPoint.categories_i18n[:cautionary] %>
      <%= f.radio_button :category, "scenic" %>
      <%= f.label :category, CheckPoint.categories_i18n[:scenic] %>
    </div>
    <div class="actions mb-4 mt-3">
      <%= f.submit button_name, class:"btn btn-primary" %>
    </div>
  <% end %>
</div>

