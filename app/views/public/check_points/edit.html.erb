<div class="row">
  <%= render 'layouts/error_messages', model: @check_point %>
</div>

<h2 class="my-5 bg-light text-center"><%= @check_point.name %>の</br>チェックポイントを編集</h2>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <table class="table table-borderless">
      <%=form_with model:@check_point, url:road_check_point_path, local: true do |f| %>
      <tr>
        <th>チェックポイント名</th>
        <td><%= f.text_field :name,class:"check-point-name",size:40 %></td>
      </tr>

      <tr>
        <th>説明</th>
        <td><%= f.text_area :introduction, class:"check-point-intro", size: "39x3" %></td>
      </tr>

      <tr>
        <th>画像の登録</th>
        <td><%= f.file_field :image %></td>
      </tr>

      <tr>
        <th>地点の緯度</th>
        <td><%= f.text_field :latitude, class:"latitude",　size:40 %></td>
      </tr>

      <tr>
        <th>地点の経度</th>
        <td><%= f.text_field :longitude, class:"longitude",　size:40 %></td>
      </tr>
      <tr>
        <th>ポイントの種類</th>
        <td>
          <%= f.radio_button :category, "cautionary" %>
          <%= f.label :category, CheckPoint.categories_i18n[:cautionary] %>
          <%= f.radio_button :category, "scenic" %>
          <%= f.label :category, CheckPoint.categories_i18n[:scenic] %>
        </td>
      </tr>
      <tr>
        <th><td><%= f.submit '更新',class:"btn btn-primary" %></td></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>