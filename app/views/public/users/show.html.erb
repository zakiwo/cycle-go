<div class="row mt-3">
    <div class="col-md-9">
      <div class="my-page-top h2">マイページ</div>
    </div>
  </div>

  <div class="row py-3">
    <div class="col-md-2">
      <h4>登録情報</h4>
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_information_path, {class: "btn btn-success btn-sm"} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3" style="padding: 0;">
      <div class="border bg-light d-flex align-items-center infos_cell">
        <div class="pl-1">
          氏名
        </div>
      </div>
    </div>
    <div class="col-md-6" style="padding: 0;">
      <div class="border d-flex align-items-center infos_cell">
        <div class="pl-1">
          <%= current_user.last_name + current_user.first_name %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3" style="padding: 0;">
      <div class="border bg-light d-flex align-items-center infos_cell">
        <div class="pl-1">
          ニックネーム
        </div>
      </div>
    </div>
    <div class="col-md-6" style="padding: 0;">
      <div class="border d-flex align-items-center infos_cell">
        <div class="pl-1">
          <%= current_user.nick_name %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3" style="padding: 0;">
      <div class="border bg-light d-flex align-items-center infos_cell">
        <div class="pl-1">
          自己紹介
        </div>
      </div>
    </div>
    <div class="col-md-6" style="padding: 0;">
      <div class="border d-flex align-items-center infos_cell">
        <div class="pl-1">
          <%= current_user.introduction %>
        </div>
      </div>
    </div>
  </div>