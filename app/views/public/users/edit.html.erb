<div class="row">
  <%= render 'layouts/error_messages', model:@user %>
</div>

<div class="row">
  <div class="col-md-8">
    <h2 class="mt-3">編集画面</h2>
    <%= form_with model:@user, url:update_information_path, local:true do |f| %>
      <table class="table customer_info customer_form">
        <tbody>
          <tr>
            <td>名前</td>
            <td><%= f.label :last_name, "(姓)", class: "customer_name" %> <%= f.text_field :last_name, autofocus: true, :placeholder =>"難波", size:"10" %>
                <%= f.label :first_name, "(名)", class: "customer_name" %> <%= f.text_field :first_name, :placeholder =>"太郎", size:"10" %></td>
          </tr>

          <tr>
            <td><%= f.label :nick_name, "ニックネーム" %></td>
            <td colspan="2"><%= f.text_field :nick_name, size:"30" %></td>
          </tr>

          <tr>
            <td><%= f.label :introduction, "自己紹介" %></td>
            <td colspan="2"><%= f.text_area :introduction, size:"29x3" %></td>
          </tr>

          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td colspan="2"><%= f.email_field :email, autocomplete: "email", size:"30" %></td>
          </tr>

          <tr>
            <td></td>
            <td colspan="2"><%= f.submit "更新", class: "btn btn-primary mt-2 mb-5" %></td>
            <td><%= link_to "退会する", confirm_unsubscribe_path, class:"btn btn-danger" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>