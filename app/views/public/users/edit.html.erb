<div class="py-3 text-center">
  <%= render 'layouts/error_messages', model:@user %>
</div>

<div class="py-3 text-center">
  <h2 class="mt-3 font-weight-bold">編集画面</h2>
</div>

<div class="row text-center">
  <div class="col-md-6 offset-md-3">
    <%= form_with model:@user, url:update_information_path, local:true do |f| %>
      <div class="form mb-4">
        <p>名前</p>
        <%= f.label :last_name, "(姓)" %> <%= f.text_field :last_name, autofocus: true, :placeholder =>"難波", size:"10" %>
        <%= f.label :first_name, "(名)", class: "ml-3" %> <%= f.text_field :first_name, :placeholder =>"太郎", size:"10" %>
      </div>
      <div class="form mb-4">
        <%= f.label :nick_name, "ニックネーム" %><br/>
        <%= f.text_field :nick_name, size:"30" %>
      </div>
      <div class="form mb-4">
        <%= f.label :introduction, "自己紹介" %><br/>
        <%= f.text_area :introduction, size:"29x3" %>
      </div>
       <div class="form mb-4">
        <%= f.label :email, "メールアドレス" %><br/>
        <%= f.email_field :email, autocomplete: "email", size:"30" %>
      </div>
      <div class="actions mb-4 mt-3">
        <%= f.submit "更新する", class: "btn btn-success" %>
        <%= link_to "退会する", confirm_unsubscribe_path, class:"btn btn-danger ml-5" %>
      </div>
    <% end %>
  </div>
</div>