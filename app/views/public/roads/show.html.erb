<div class="row my-3">
  <div class="col">
    <h2><i class="fas fa-bicycle"></i> <%= @road.name %></h2>
  </div>
</div>

<div class="row my-3">
  <div class="col 10">
    <% if @road.image.attached? %>
      <%= image_tag @road.image.variant(resize:'1000x1000') %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col bg-white">
    <p><%= @road.introduction %></p>
    <p> <i class="fas fa-road"></i> 総距離：<%= @road.distance %>km</p>
    <p><i class="fas fa-mountain"></i>獲得標高：<%= @road.elevation_gain %>m</p>
    <p><i class="fas fa-gamepad"></i> 難易度：<%= @road.difficulty_i18n %></p>
    <p>
      <% if user_signed_in? && current_user.id == @road.user_id %>
        <%= link_to "編集する", edit_road_path(@road), class:"btn btn-success" %>
      <% end %>
      <%= link_to "チェックポイントを登録", new_road_check_point_path(@road), class:"btn btn-primary ml-3" %>
    </p>
  </div>
</div>

<div class="row my-3">
  <div class="col">
    <h2>チェックポイント</h2>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table">
      <tbody>
        <% @road.check_points.each do |point| %>
        <tr>
        <% if point.image.attached? %>
          <td><%= image_tag point.image.variant(resize:'300x300'), class:"rounded" %></td>
        <% else %>
          <td></td>
        <% end %>
          <td>
            <h3><%= link_to point.name, road_check_point_path(@road, point), class:"bold" %></h3>
            <p><%= point.introduction %></p>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>