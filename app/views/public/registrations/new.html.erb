<div class="row text-center">
  <div class="col-sm-4 offset-sm-4">
    <h2 class="my-3 font-weight-bold">新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form mb-4">
        <p>名前</p>
        <%= f.label :last_name, "(姓)" %> <%= f.text_field :last_name, autofocus: true, :placeholder =>"難波", size:"10" %>
        <%= f.label :first_name, "(名)", class: "ml-3" %> <%= f.text_field :first_name, :placeholder =>"太郎", size:"10" %>
      </div>
      <div class="form mb-4">
        <%= f.label :nick_name, "ニックネーム" %><br/>
        <%= f.text_field :nick_name, size:"30" %>
      </div>
      <div class="form mb-4">
        <%= f.label :introduction, "自己紹介" %><br/>
        <%= f.text_area :introduction, size:"29x3" %>
      </div>
       <div class="form mb-4">
        <%= f.label :email, "メールアドレス" %><br/>
        <%= f.email_field :email, autocomplete: "email", size:"30" %>
      </div>
       <div class="form mb-4">
        <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %><br/>
        <%= f.password_field :password, autocomplete: "new-password", size:"30"  %>
      </div>
       <div class="form mb-4">
        <%= f.label :password_confirmation, "パスワード(確認用)" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size:"30"  %>
      </div>
      <div class="actions mb-4">
        <%= f.submit "新規登録", class: "btn btn-success mt-2 mb-5" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row text-center">
  <div class="col-sm-4 offset-sm-4">
    <h2 class="font-weight-bold">既に登録済みの方</h2>
    <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
  </div>
</div>
